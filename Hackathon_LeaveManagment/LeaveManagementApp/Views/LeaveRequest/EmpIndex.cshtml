@model IEnumerable<LeaveRequest>

@{
    ViewData["Title"] = "My Leave Requests";
}

<h2>My Leave Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Leave Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Reason</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.LeaveType</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.Status</td>
                <td>@leave.Reason</td>
                <td>
                    @if (leave.Status == LeaveRequest.LeaveStatus.Pending)
                    {
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@leave.LeaveRequestId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this request?');">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Apply" class="btn btn-primary">Apply for Leave</a>
