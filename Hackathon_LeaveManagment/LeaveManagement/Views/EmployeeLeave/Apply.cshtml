@model LeaveManagement.Models.LeaveRequest
@{
    ViewData["Title"] = "Apply for Leave";
}

<h2>Apply for Leave</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Apply" method="post">
    <div class="form-group">
        <label asp-for="LeaveType"></label>
        <select asp-for="LeaveType" class="form-control">
            <option value="Sick">Sick</option>
            <option value="Casual">Casual</option>
            <option value="Paid">Paid</option>
            <option value="Unpaid">Unpaid</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Reason"></label>
        <textarea asp-for="Reason" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
