@model IEnumerable<LeaveManagement.Models.LeaveApproval>

<h2>Admin Dashboard - Leave Approvals</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Leave Type</th>
            <th>Requested Days</th>
            <th>Manager</th>
            <th>Status</th>
            <th>Comments</th>
            <th>Reviewed Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var approval in Model)
        {
            <tr>
                <td>@approval.LeaveRequest.Employee.Name</td>
                <td>@approval.LeaveRequest.LeaveType</td>
                <td>@approval.LeaveRequest.AppliedDate</td>
                <td>@approval.Manager.Name</td>
                <td>
                    @if (approval.ApprovalStatus == LeaveApproval.ApprovalStatusEnum.Approved)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else if (approval.ApprovalStatus == LeaveApproval.ApprovalStatusEnum.Rejected)
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                </td>
                <td>@approval.Comments</td>
                <td>@approval.ReviewedDate.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
